{#  #}
<div class="Partners">
	<div class="Site-container">
		<div class="row">
			<div class="col-12 col-md-10 offset-md-1 col-md-6 offset-hd-5">
				<h2 class="Partners__title">{{- __( 'Thanks to our partners and supporters:', 'delileauxpapilles' ) -}}</h2>
			</div>
		</div>
		<div class="row">
			<div class="col-12 col-md-10 offset-md-1 col-hd-6 offset-hd-5">
				<div class="row">
					{% for post in posts %}
						<div class="col-6 col-sm-3 col-md-2">
							{{- post.get_field( 'link' ) ? "<a href=\"#{post.get_field( 'link' )}\" target=\"_blank\" rel=\"noopener\" class=\"d-block\">" | raw -}}
								{%- include 'partials/image.html.twig' with { classes: [ 'Partners__item' ], image: post.thumbnail } -%}
							{{- post.get_field( 'link' ) ? '</a>' | raw -}}
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
</div>
