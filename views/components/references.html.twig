{#  #}
<div class="References">
	<div class="Site-container">
		<div class="row">
			{% for post in posts %}
				<div class="col-sm-6 col-md-2">
					{{- post.get_field( 'link' ) ? "<a href=\"#{post.get_field('link')}\" target=\"_blank\" rel=\"noopener\" class=\"d-block\" aria-label=\"#{post.title}\">" | raw -}}
						{%- include 'partials/image.html.twig' with { classes: [ 'References__item' ], image: post.thumbnail } only -%}
					{{- post.get_field( 'link' ) ? '</a>' | raw -}}
				</div>
			{% endfor %}
		</div>
	</div>
</div>
