{#  #}
<div class="References">
	<div class="Site-container">
		<div class="row">
			{% for post in posts %}
				<div class="col-2">
					{{ post.get_field( 'link' ) ? "<a href=\"#{post.link}\" class=\"d-block\">" | raw }}
						{% include 'partials/image.html.twig' with { classes: [ 'References__item' ], image: post.thumbnail } %}
					{{ post.get_field( 'link' ) ? '</a>' | raw }}
				</div>
			{% endfor %}
		</div>
	</div>
</div>
